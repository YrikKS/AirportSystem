<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="colorSurface">@color/second_theme_color</item>
        <item name="colorOnSurface">@color/main_theme_color</item>
        <item name="colorPrimary">@color/main_theme_color</item>
        <item name="colorSecondary">@color/main_theme_color</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/main_theme_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="Widget.App.SideSheet.Modal" parent="Widget.Material3.SideSheet.Modal">
        <item name="backgroundTint">#E1F5FE</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent2</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent2" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>


</resources>
